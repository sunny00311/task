<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Startup Dashboard | InvestMate</title>
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: "Segoe UI", sans-serif;
        background-color: #f7f9fc;
        padding: 0 20px;
      }

      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 0;
        border-bottom: 2px solid #ddd;
        background-color: white;
      }

      .navbar .logo {
        font-size: 24px;
        font-weight: bold;
        color: #007bff;
      }

      .navbar .nav-links a {
        margin-left: 20px;
        text-decoration: none;
        color: #333;
        font-weight: 500;
      }

      .cards-container {
        margin-top: 25px;
        display: flex;
        flex-direction: column;
        gap: 15px;
      }

      .card {
        background: white;
        padding: 20px;
        border-radius: 10px;
        border: 1px solid #eee;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
      }

      .card h3 {
        margin-bottom: 10px;
        color: #007bff;
      }

      .card p {
        margin: 5px 0;
      }

      .card .btn {
        margin-top: 10px;
        display: inline-block;
        padding: 8px 15px;
        background-color: #007bff;
        color: white;
        border-radius: 6px;
        text-decoration: none;
        font-size: 14px;
      }

      .card .btn:hover {
        background-color: #313e4d;
      }

      .filter-bar {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background-color: #f5f5f5;
        border-bottom: 1px solid #ddd;
      }
      .filter-bar select,
      .filter-bar input {
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 4px;
      }
      .filter-button {
        padding: 0.6rem 1rem;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      .results {
        padding: 1rem;
      }
    </style>
  </head>

  <body>
    <!-- Navbar -->
    <div class="navbar">
      <div class="logo">InvestMate</div>
      <div class="nav-links">
        <button onclick="showInvestorProfile()">Profile</button>
        <a href="/logout">Logout</a>
      </div>
    </div>

    <!-- Filter Bar -->
    <div class="filter-bar">
      <button class="filter-button" onclick="applyFilters()">Filter</button>

      <select id="location">
        <option value="">All States</option>
        <option value="Maharashtra">Maharashtra</option>
        <option value="Karnataka">Karnataka</option>
        <option value="Delhi">Delhi</option>
        <option value="Tamil Nadu">Tamil Nadu</option>
        <option value="Bangalore, India">Bangalore</option>
        <option value="delhi,india">delhi</option>
        <option value="pune,india">pune</option>
        <!-- Add all other Indian states as needed -->
      </select>

      <select id="industry">
        <option value="">All Industries</option>
        <option value="EdTech">EdTech</option>
        <option value="AgriTech">AgriTech</option>
        <option value="FinTech">FinTech</option>
        <option value="HealthTech">HealthTech</option>
        <option value="E-commerce">E-commerce</option>
        <!-- Add more general industries -->
      </select>

      <input type="number" id="minFunding" placeholder="Min INR" />
      <input type="number" id="maxFunding" placeholder="Max INR" />
    </div>

    <!-- <div class="results" id="results">
    <! Filtered startup list will appear here -->
    <!-- </div>  -->

    <!-- Cards -->
    <div class="results" id="results" class="cards-container">
      <% startups.forEach(startup => { %>
      <div class="card">
        <h3><%= startup.startupName %></h3>
        <p><strong>Problem:</strong> <%= startup.problem %></p>
        <p><strong>Funding Needed:</strong> <%= startup.funding %></p>
        <p><strong>Location:</strong> <%= startup.location %></p>
        <p><strong>Sector:</strong> <%= startup.industry %></p>
        <a href="/startup/<%= startup.id %>" class="btn">View Details</a>
      </div>
      <% }) %>
    </div>

    <!-- ðŸ’¡ Investor Profile Popup -->
    <div
      id="investorProfilePopup"
      style="
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 9999;
        justify-content: center;
        align-items: center;
      "
    >
      <div
        style="
          background: white;
          padding: 2rem;
          border-radius: 12px;
          width: 400px;
          position: relative;
        "
      >
        <!-- âŒ Close Button -->
        <button
          onclick="closeInvestorProfile()"
          style="
            position: absolute;
            top: 10px;
            right: 10px;
            border: none;
            background: transparent;
            font-size: 20px;
            cursor: pointer;
          "
        >
          &times;
        </button>

        <!-- ðŸ“„ Profile Content -->
        <h2>Investor Profile</h2>
        <p><strong>Name:</strong> <%= user.fullName || '-' %></p>
        <p><strong>Email:</strong> <%= user.email || '-' %></p>
        <p><strong>Phone:</strong> <%= user.phone || '-' %></p>
        <p><strong>Firm:</strong> <%= user.firm || '-' %></p>
        <p><strong>Website:</strong> <%= user.website || '-' %></p>
        <p><strong>Sector:</strong> <%= user.sector || '-' %></p>
        <p><strong>Ticket Size:</strong> <%= user.ticketSize || '-' %></p>
        <p><strong>Location:</strong> <%= user.location || '-' %></p>
        <p><strong>Bio:</strong> <%= user.bio || '-' %></p>
      </div>
    </div>

    <script>
                              const startups = <%- JSON.stringify(startups) %>;


                            function applyFilters() {
            const location = document.getElementById('location').value.trim();
            const industry = document.getElementById('industry').value.trim();
            const minFunding = parseInt(document.getElementById('minFunding').value) || 0;
            const maxFunding = parseInt(document.getElementById('maxFunding').value) || Infinity;

            const filtered = startups.filter(startup => {
              const matchesLocation = !location || (startup.location && startup.location.toLowerCase() === location.toLowerCase());
              const matchesIndustry = !industry || (startup.industry && startup.industry.toLowerCase() === industry.toLowerCase());
              const funding = parseInt(startup.fundingRequired) || 0;
              const matchesFunding = funding >= minFunding && funding <= maxFunding;

              return matchesLocation && matchesIndustry && matchesFunding;
            });

            console.log('filtered :>> ', filtered);
            renderResults(filtered);
          }




                      console.log('filtered :>> ', filtered);
                            function renderResults(filtered) {
                              const container = document.getElementById('results');
                              container.innerHTML = filtered.length ?
                                filtered.map(startup => `
                                  <div><strong>${startup.name}</strong> - ${startup.location}, ${startup.industry}, INR ${startup.fundingRequired.toLocaleString()}</div>
                                `).join('') : "<p>No matching startups found.</p>";
                            }

                            // userprifile

                             // Show the popup (set display to flex)
      function showInvestorProfile() {
        document.getElementById("investorProfilePopup").style.display = "flex";
      }

      // Close the popup
      function closeInvestorProfile() {
        document.getElementById("investorProfilePopup").style.display = "none";
      }
    </script>
  </body>
</html>
